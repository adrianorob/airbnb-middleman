<!-- source/flats/show.html.erb -->
<% spot = data.places[owner] %>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path(spot.card_picture)%>'); height: 50vh; background-position: center;">
  <div class="banner-content">
    <h1><%= spot.city %></h1>
    <p>Surf Spot - <%= spot.spot_name%></p>
  </div>
</div>
<div class="header-flat padded">
  <div class="container">
    <ul class="list-inline">
      <li class="surf-teacher text-left">
        <%= image_tag(spot.picture, class: 'avatar-large') %>
      </li>
      <li>
        <h4>Surf teacher - <%= owner.capitalize %></h4>
      </li>
    </ul>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-name">
            <h1><%= spot.city %>, <%= spot.spot_name %></h1>
            <p><%= spot.description %></p>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #cacccd"></i>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="#">
          <h4>Book a surf lesson</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout" id="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 board</option>
              <option value="2">2 boards</option>
              <option value="3">3 boards</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
        </form>
      </div>
    </div>
  </div>
</div>